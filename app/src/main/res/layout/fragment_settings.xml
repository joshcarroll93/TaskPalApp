<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frameLayout"
    android:clickable="true"
    android:padding="22dp"
    tools:context="joshcarroll.projects.android.taskpal.fragment.SettingsFragment">

        <TextView
            android:id="@+id/id_text_view_notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/id_notifications_switch"
            android:text="@string/notifications"
            android:textColor="#000000"
            android:textSize="18sp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/id_notifications_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:shadowColor="@color/ColorNavy" />
</RelativeLayout>
